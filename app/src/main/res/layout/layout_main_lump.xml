<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    >

    <com.amenuo.monitor.view.MainLumpImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_lump_image"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:id="@+id/main_lump_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/main_lump_text"
        android:textColor="@color/white"
        android:background="@drawable/main_lump_bg_shape"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textSize="18sp" />
    
    <ImageView
        android:id="@+id/main_lump_delete"
        android:clickable="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/main_lump_delete"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
