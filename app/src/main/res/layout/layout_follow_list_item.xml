<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/follow_list_item_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:padding="5dp"
            android:src="@drawable/main_lump_live_icon"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/follow_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/follow_list_item_icon"
            android:layout_alignParentTop="true"
            android:text="路况消息"
            />
        <TextView
            android:id="@+id/follow_list_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/follow_list_item_icon"
            android:layout_below="@id/follow_list_item_name"
            android:text="路况消息"
            />

        <Button
            android:id="@+id/follow_list_item_follow"
            style="?android:textAppearanceSmall"
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:text="@string/text_follow"
            android:textColor="@color/white"
            android:background="@drawable/common_btn_bg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <View
        android:id="@+id/follow_list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorDivider"/>
</LinearLayout>