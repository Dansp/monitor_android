<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayBG"
    android:orientation="vertical"
    tools:context="com.amenuo.monitor.activity.FollowActivity">

    <com.amenuo.monitor.view.TitleBar
        android:id="@+id/follow_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:leftIcon="@drawable/common_back_icon"
        app:middleTitle="@string/title_activity_follow"
        />
    <ProgressBar
        android:id="@+id/follow_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>
    <ExpandableListView
        android:id="@+id/follow_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="@null"/>

</LinearLayout>
