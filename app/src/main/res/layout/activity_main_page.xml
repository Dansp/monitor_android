<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amenuo.monitor.activity.MainPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.amenuo.monitor.view.MainLumpView
            android:id="@+id/main_page_weather_lumpView"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.amenuo.monitor.view.MainLumpView
                android:id="@+id/main_page_camera_lumpView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <com.amenuo.monitor.view.MainLumpView
                android:id="@+id/main_page_live_lumpView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.amenuo.monitor.view.MainLumpView
                android:id="@+id/main_page_convenience_lumpView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1" />

            <com.amenuo.monitor.view.MainLumpView
                android:id="@+id/main_page_traffic_lumpView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />
        </LinearLayout>

